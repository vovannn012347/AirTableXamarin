<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    
    <item name="colorPrimary">#2196F3</item>
    <item name="colorPrimaryDark">#1976D2</item>
    
    <item name="colorAccent">#FF4081</item>
 
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <style name="ColoredActivityTheme" parent="MainTheme">
    <item name="actionMenuTextColor">#FFFFFF</item>
    <item name="android:actionMenuTextColor">#FFFFFF</item>
    <item name="colorControlNormal">#FFFFFF</item>
    <item name="android:colorControlNormal">#FFFFFF</item>
    <item name="android:actionBarStyle">@style/ColoredActivitiyActionBarTheme</item>
    <item name="actionBarStyle">@style/ColoredActivitiyActionBarTheme</item>
  </style>
  <style name="ColoredActivitiyActionBarTheme" parent ="ColoredActivityTheme">
    <item name="android:tint">#FFFFFF</item>
    <item name="tint">#FFFFFF</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="android:textColorSecondary">#FFFFFF</item>
  </style>

  <style name="TextAppearance" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:textColor">@color/colorPrimaryDark</item>
  </style>
  
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FF4081</item>
  </style>
  
  <style name="SaveMenuWhiteText" parent="MainTheme.Base">
    <item name="actionMenuTextColor">#FFFFFF</item>
    <item name="android:actionMenuTextColor">#FFFFFF</item>
  </style>
  
</resources>
